---
import '../styles/global.css';
import { getLangFromUrl } from '../utils/i18n.js';

import BackgroundVideo from '../components/ui/BackgroundVideo.jsx';

const lang = getLangFromUrl(Astro.url);
const { 
  title = "Gabriel Gonz√°lez | Full Stack Developer", 
  description = "Full Stack Developer specializing in high-performance, accessible web applications. Building modern web experiences with Astro, React, and cutting-edge technologies." 
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const socialImage = new URL('/og-image.jpg', Astro.site);
---

<!DOCTYPE html>
<html lang={lang} class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />
    <meta property="og:image" content={socialImage} />
    <!-- tus metas SEO como ya los tienes -->
  </head>
  <body class="bg-white text-black dark:bg-black dark:text-white antialiased transition-colors duration-300">
    <a 
      href="#main-content" 
      class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-50 focus:px-4 focus:py-2 focus:bg-black focus:text-white dark:focus:bg-white dark:focus:text-black focus:rounded"
    >
      Skip to main content
    </a>

    <BackgroundVideo client:load />
    <slot />
    
  </body>
</html>

